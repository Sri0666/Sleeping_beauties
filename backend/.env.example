# Environment Configuration
NODE_ENV=development
PORT=5000

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/sleeping_beauties
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/sleeping_beauties

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=30d

# ESP32 Configuration
ESP32_API_KEY=your_esp32_api_key_here
DEVICE_TIMEOUT=30000

# Sleep Analysis Configuration
SLEEP_ANALYSIS_INTERVAL=300000  # 5 minutes in milliseconds
SNORING_THRESHOLD=50            # dB threshold for snoring detection
POSITION_CHANGE_THRESHOLD=30    # degrees for position change detection

# Notification Settings
ENABLE_PUSH_NOTIFICATIONS=false
NOTIFICATION_SERVICE_URL=

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=debug
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW=15    # minutes
RATE_LIMIT_MAX=100      # max requests per window

# Redis Configuration (for sessions/caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# External APIs
WEATHER_API_KEY=        # For sleep environment correlation
TIMEZONE_API_KEY=       # For circadian rhythm calculations